<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_down"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvSapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:text="Selamat Siang"
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <TextClock
                    android:id="@+id/tvJam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-light"
                    android:format24Hour="hh:mm"
                    android:textColor="#FFF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:text="21-07-2020"
                    android:textColor="#FFF"
                    android:textSize="15sp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="17dp"
                android:layout_marginHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:text="Covid-19 Hari ini" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:contentPadding="10dp"
                        app:cardBackgroundColor="#0f4c75">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:text="Positif"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#FFF"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvPositiveToday"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:gravity="end"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#FFF"
                                android:textSize="15sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            app:contentPadding="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            app:cardBackgroundColor="#0f4c75">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    android:text="Sembuh"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#FFF"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/tvSembuhToday"
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:gravity="end"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#FFF"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:layout_marginStart="5dp"
                            app:contentPadding="10dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#0f4c75">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="6"
                                    android:layout_height="wrap_content"
                                    android:text="Meninggal"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#FFF"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/tvMeninggalToday"
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:gravity="end"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#FFF"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="17dp"
                android:elevation="5dp"
                android:layout_marginHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:text="Covid-19 Sepanjang Waktu" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:contentPadding="10dp"
                        app:cardBackgroundColor="#0f4c75">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:text="Positif"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#FFF"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvPositive"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:gravity="end"
                                android:fontFamily="sans-serif-light"
                                android:textColor="#FFF"
                                android:textSize="15sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            app:contentPadding="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            app:cardBackgroundColor="#0f4c75">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    android:text="Sembuh"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#FFF"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/tvSembuh"
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:gravity="end"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#FFF"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:layout_marginStart="5dp"
                            app:contentPadding="10dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#0f4c75">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="6"
                                    android:layout_height="wrap_content"
                                    android:text="Meninggal"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#FFF"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/tvMeninggal"
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:gravity="end"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#FFF"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#99000000"
            app:contentPadding="10dp"
            android:layout_gravity="end|bottom"
            android:elevation="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="17dp">

            <TextView
                android:id="@+id/tvUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Update 21 Juli 2020"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFF"
                android:textSize="12sp" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>